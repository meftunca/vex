# Vex Qdrant RAG System Configuration

# Qdrant connection
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Ollama for embeddings (nomic-embed-text model)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text:latest
EMBEDDING_DIM=768
EMBEDDING_DIM=768

# Collections
COLLECTION_DOCS=vex_docs
COLLECTION_CODE=vex_code
COLLECTION_TODOS=vex_todos
COLLECTION_EXAMPLES=vex_examples

# Vex project paths (relative to project root)
VEX_ROOT=..
SPECS_DIR=../Specifications
DOCS_DIR=../docs
CODE_DIRS=../vex-libs,../vex-compiler,../vex-parser,../vex-runtime
EXAMPLES_DIR=../examples
TODO_FILE=../.github/copilot-instructions.md

# Chunking configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=2000

# Search configuration
DEFAULT_LIMIT=5
SCORE_THRESHOLD=0.7
ENABLE_HYBRID_SEARCH=true

# MCP Server
MCP_SERVER_NAME=vex-qdrant-rag
MCP_SERVER_VERSION=1.0.0
MCP_PORT=3000
