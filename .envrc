# LLVM 18 Environment Configuration
# Use direnv or source this file manually: source .envrc

export LLVM_SYS_181_PREFIX=/opt/homebrew/opt/llvm@18
export PATH="/opt/homebrew/opt/llvm@18/bin:$PATH"
export LDFLAGS="-L/opt/homebrew/opt/llvm@18/lib"
export CPPFLAGS="-I/opt/homebrew/opt/llvm@18/include"

# For pkg-config
export PKG_CONFIG_PATH="/opt/homebrew/opt/llvm@18/lib/pkgconfig:$PKG_CONFIG_PATH"

echo "âœ… LLVM 18 environment configured"
echo "   LLVM_SYS_181_PREFIX=$LLVM_SYS_181_PREFIX"
