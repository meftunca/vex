// Time module integration test

import { now, sleep, Duration } from "time";

fn main(): i32 {
    // Get current time
    let t = now();
    println("Current time captured");

    // Sleep for 1 second
    let d = Duration { ns: 1000000000 }; // 1 second
    sleep(d);
    println("Slept for 1 second");

    return 0;
}