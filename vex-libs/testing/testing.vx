}

// Assert two values are equal
fn assert_eq<T>(left: T, right: T) {
    if left != right {
        panic("Assertion failed: values not equal");
    }
}

// Assert two values are not equal
fn assert_ne<T>(left: T, right: T) {
    if left == right {
        panic("Assertion failed: values are equal");
    }
}

/**
 * Print test summary
 * Returns 0 if all passed, 1 if any failed
 */
pub fn summary(): i32 {
    return vex_test_summary();
}

