// Testing Module (Minimal - No FFI for now)
// Basic test utilities without C runtime dependency
//
// Usage:
//   import { assert_true, assert_false, assert_eq_i32 } from "testing";

import { println } from "io";

// Assert true
export fn assert_true(condition: bool, message: string) {
    if !condition {
        println("ASSERTION FAILED: ");
        println(message);
    }
}

// Assert false
export fn assert_false(condition: bool, message: string) {
    if condition {
        println("ASSERTION FAILED: ");
        println(message);
    }
}

// Assert equality for i32
export fn assert_eq_i32(left: i32, right: i32, message: string) {
    if left != right {
        println("ASSERTION FAILED: ");
        println(message);
    }
}

// Assert equality for i64
export fn assert_eq_i64(left: i64, right: i64, message: string) {
    if left != right {
        println("ASSERTION FAILED: ");
        println(message);
    }
}

// Assert equality for bool
export fn assert_eq_bool(left: bool, right: bool, message: string) {
    if left != right {
        println("ASSERTION FAILED: ");
        println(message);
    }
}

// Log message
export fn log(message: string) {
    println(message);
}
