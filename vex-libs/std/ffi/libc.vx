// Safe wrappers (exported API)
export fn safe_malloc(size: usize):(*byte | error) {
    ptr := unsafe { malloc(size) };
    if ptr as usize == 0 {
        return error.new("Out of memory");
    }
    return ptr;
}

export fn safe_free(ptr: *byte) {
    if ptr as usize != 0 {
        unsafe { free(ptr); }
    }
}

export fn safe_strlen(s: *byte):usize {
    return unsafe { strlen(s) };
}

// Safe filesystem wrappers
export fn safe_mkdir(path: *byte, mode: u32):(i32 | error) {
    result := unsafe { mkdir(path, mode) };
    if result != 0 {
        return error.new("Failed to create directory");
    }
    return result;
}

