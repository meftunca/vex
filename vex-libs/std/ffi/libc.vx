}

export fn safe_pthread_mutex_lock(mutex: *pthread_mutex_t):(i32 | error) {
    result := unsafe { pthread_mutex_lock(mutex) };
    if result != 0 {
        return error.new("Failed to lock mutex");
    }
    return result;
}

export fn safe_pthread_mutex_unlock(mutex: *pthread_mutex_t):(i32 | error) {
    result := unsafe { pthread_mutex_unlock(mutex) };
    if result != 0 {
        return error.new("Failed to unlock mutex");
    }
    return result;
}

export fn safe_pthread_mutex_trylock(mutex: *pthread_mutex_t):(bool | error) {
    result := unsafe { pthread_mutex_trylock(mutex) };
    if result == 0 {
        return true;  // Successfully locked
    } else if result == EBUSY {
        return false; // Already locked
    } else {
        return error.new("Failed to trylock mutex");
    }
}

export fn safe_pthread_mutex_destroy(mutex: *pthread_mutex_t):(i32 | error) {
    result := unsafe { pthread_mutex_destroy(mutex) };
    if result != 0 {
        return error.new("Failed to destroy mutex");
    }
    return result;
}

