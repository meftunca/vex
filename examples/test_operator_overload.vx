// Test: Operator Overloading - Vector2 Addition

trait Add {
    fn add(other: Self): Self;
}

trait Mul {
    fn mul(other: f32): Self;
}

struct Vector2 impl Add, Mul {
    x: f32,
    y: f32,

    fn add(other: Vector2): Vector2 {
        return Vector2 {
            x: self.x + other.x,
            y: self.y + other.y
        };
    }

    fn mul(scalar: f32): Vector2 {
        return Vector2 {
            x: self.x * scalar,
            y: self.y * scalar
        };
    }
}

fn main(): i32 {
    let v1 = Vector2 { x: 1.0, y: 2.0 };
    let v2 = Vector2 { x: 3.0, y: 4.0 };
    
    // Test 1: Method call (should work)
    let v3 = v1.add(v2);
    
    // Test 2: Operator overloading (v1 + v2 → v1.add(v2))
    let v4 = v1 + v2;  // ⭐ Test operator overloading!
    
    return 0;
}
