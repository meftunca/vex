// Test trait methods (simplified syntax)

trait Greeter {
    // Simplified syntax - no explicit receiver
    fn get_name(): string;
    fn greet(): i32;
    fn farewell(): i32;
}

struct Person impl Greeter {
    name: string,
    age: i32,
    
    // Implement all methods (simplified syntax)
    fn get_name(): string {
        return self.name;
    }
    
    fn greet(): i32 {
        let name = self.get_name();
        print("Hello, ", name, "!");
        return 0;
    }
    
    fn farewell(): i32 {
        print("Goodbye!");
        return 0;
    }

}

fn main(): i32 {
    let! person = Person { name: "Alice", age: 30 };
    
    // Call required method (explicitly implemented)
    let name = person.get_name();
    print("Name from explicit method");
    
    // Call default methods (should use trait's implementation)
    let r1 = person.greet();
    let r2 = person.farewell();
    
    print("Test completed!");
    
    return 0;
}
