// Test trait methods (all signatures only)

trait Greeter {
    // All methods are signatures only (no body)
    fn (self: &Self!) get_name(): string;
    fn (self: &Self!) greet(): i32;
    fn (self: &Self!) farewell(): i32;
}

struct Person impl Greeter {
    name: string,
    age: i32,
    
    // Implement all methods
    fn (self: &Person!) get_name(): string {
        return self.name;
    }
    
    fn (self: &Person!) greet(): i32 {
        let name = self.get_name();
        print("Hello, ", name, "!");
        return 0;
    }
    
    fn (self: &Person!) farewell(): i32 {
        print("Goodbye!");
        return 0;
    }

}

fn main(): i32 {
    let! person = Person { name: "Alice", age: 30 };
    
    // Call required method (explicitly implemented)
    let name = person.get_name();
    print("Name from explicit method");
    
    // Call default methods (should use trait's implementation)
    let r1 = person.greet();
    let r2 = person.farewell();
    
    print("Test completed!");
    
    return 0;
}
