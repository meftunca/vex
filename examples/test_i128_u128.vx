// Test i128/u128 types - Large integer arithmetic

fn test_i128_basic() {
    let! x: i128 = 1000000000000000000;
    let! y: i128 = 2000000000000000000;
    let! result: i128 = x + y;
    print("i128 addition test passed");
}

fn test_u128_basic() {
    let! x: u128 = 1000000000000000000;
    let! y: u128 = 2000000000000000000;
    let! result: u128 = x + y;
    print("u128 addition test passed");
}

fn test_i128_negative() {
    let! x: i128 = -1000000000000000000;
    let! y: i128 = 500000000000000000;
    let! result: i128 = x + y;
    print("i128 negative test passed");
}

fn test_u128_overflow() {
    // Use smaller numbers that fit in lexer's integer limits
    let! max: u128 = 9223372036854775807; // i64::MAX
    let! half: u128 = 4611686018427387903;
    let! result: u128 = half + half;
    print("u128 large number test passed");
}

fn test_i128_multiplication() {
    let! x: i128 = 1000000000;
    let! y: i128 = 1000000000;
    let! result: i128 = x * y;
    print("i128 multiplication test passed");
}

fn test_type_conversion() {
    let! small: i32 = 42;
    let! large: i128 = small as i128;
    let! back: i32 = large as i32;
    print("Type conversion test passed");
}

fn main() {
    test_i128_basic();
    test_u128_basic();
    test_i128_negative();
    test_u128_overflow();
    test_i128_multiplication();
    test_type_conversion();
    print("All i128/u128 tests passed!");
}
