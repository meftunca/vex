// Closure with Environment Capture Test
// Test capturing variables from outer scope

fn make_adder(x: i32): fn(i32): i32 {
    // This closure captures 'x' from outer scope
    let adder = |y: i32| x + y;
    return adder;
}

fn main(): i32 {
    let add5 = make_adder(5);
    let result = add5(10);
    return result;  // Should return 15 (5 + 10)
}
