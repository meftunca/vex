// Valid borrow checker test - no violations

fn test_immutable() {
    let x = 10;
    println(x);
    println(x + 5);  // ✅ Reading is fine
}

fn test_mutable() {
    let! y = 5;
    println(y);
    
    y = 15;  // ✅ OK: y is mutable
    println(y);
    
    y = y + 10;  // ✅ Can update mutable variable
    println(y);
}

fn main() {
    test_immutable();
    test_mutable();
    println("All tests passed!");
}
