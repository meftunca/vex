// Test borrow checker - immutability violations

fn test_immutable() {
    let x = 10;
    println(x);
    
    // This should trigger borrow checker error:
    x = 20;  // ❌ ERROR: Cannot assign to immutable variable 'x'
    
    println(x);
}

fn test_mutable() {
    let! y = 5;
    println(y);
    
    // This should work fine:
    y = 15;  // ✅ OK: y is mutable
    
    println(y);
}

fn main() {
    test_immutable();
    test_mutable();
}
