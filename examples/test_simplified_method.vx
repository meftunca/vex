// Test simplified method syntax: fn method_name() instead of fn (self: &T) method_name()

struct Calculator {
    value: i32,
    
    // Simplified syntax - no explicit receiver
    fn get_value(): i32 {
        return self.value;
    }
    
    fn set_value(new_val: i32) {
        self.value = new_val;
        return;
    }
    
    fn add(x: i32): i32 {
        return self.value + x;
    }
}

fn main(): i32 {
    let! calc = Calculator { value: 10 };
    
    let result = calc.get_value();
    print("Initial value: ", result);
    
    calc.set_value(20);
    let result2 = calc.get_value();
    print("After set: ", result2);
    
    let sum = calc.add(5);
    print("After add: ", sum);
    
    return sum;
}
