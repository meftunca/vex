// Power function (exponentiation)

fn power(base: i32, exp: i32): i32 {
    if exp == 0 {
        return 1;
    }
    if exp == 1 {
        return base;
    }
    
    let half = power(base, exp / 2);
    
    if exp % 2 == 0 {
        return half * half;
    } else {
        return base * half * half;
    }
}

fn main(): i32 {
    let result = power(2, 10);
    println(result);  // 1024
    return 0;
}
