fn main() {
    // Test 1: Explicit downcast - should work
    let big: i64 = 1000;
    let small: i32 = big as i32;  // ✅ Explicit cast
    print("Test 1: i64 -> i32 with explicit cast\n");
    
    // Test 2: Explicit float downcast
    let precise: f64 = 3.14159;
    let rough: f32 = precise as f32;  // ✅ Explicit cast
    print("Test 2: f64 -> f32 with explicit cast\n");
    
    // Test 3: Explicit float to int
    let pi: f64 = 3.14159;
    let truncated: i32 = pi as i32;  // ✅ Explicit cast
    print("Test 3: f64 -> i32 with explicit cast\n");
    
    // Test 4: Upcast should still work implicitly
    let small_val: i32 = 42;
    let big_val: i64 = small_val;  // ✅ Implicit upcast
    print("Test 4: i32 -> i64 implicit upcast\n");
    
    print("All tests passed!\n");
}
