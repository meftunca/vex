// Simple test for new bitwise compound assignment operators

fn main(): i32 {
    // Test &= (bitwise AND assignment)
    let! a: i32 = 15;
    a &= 10;
    print("15 &= 10: ");
    print(a);  // Should print 10
    
    // Test |= (bitwise OR assignment)
    let! b: i32 = 10;
    b |= 5;
    print("10 |= 5: ");
    print(b);  // Should print 15
    
    // Test ^= (bitwise XOR assignment)
    let! c: i32 = 15;
    c ^= 10;
    print("15 ^= 10: ");
    print(c);  // Should print 5
    
    // Test <<= (left shift assignment)
    let! d: i32 = 5;
    d <<= 2;
    print("5 <<= 2: ");
    print(d);  // Should print 20
    
    // Test >>= (right shift assignment)
    let! e: i32 = 20;
    e >>= 2;
    print("20 >>= 2: ");
    print(e);  // Should print 5
    
    // Test %= (modulo assignment)
    let! f: i32 = 17;
    f %= 5;
    print("17 %= 5: ");
    print(f);  // Should print 2
    
    return 0;
}
