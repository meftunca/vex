// Test string indexing

fn main(): i32 {
    let text = "Hello, World!";
    
    // Test single byte access
    let first = text[0];
    let space = text[6];
    let last = text[12];
    
    print("First char (H):");
    print(first);
    
    print("Space char:");
    print(space);
    
    print("Last char (!):");
    print(last);
    
    // Test string slicing
    let hello = text[0..5];
    print("Slice [0..5] (Hello):");
    print(hello);
    
    let world = text[7..12];
    print("Slice [7..12] (World):");
    print(world);
    
    print("âœ… String indexing works!");
    return 0;
}
