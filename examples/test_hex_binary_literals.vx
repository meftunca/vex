// Test hexadecimal, binary, and octal literals

fn test_hex_literals(): i32 {
    let a: i32 = 0xFF;        // 255
    let b: i32 = 0x10;        // 16
    let c: i32 = 0xDEADBEEF;  // 3735928559 (but will overflow to i32)
    let d: i32 = 0x1A3F;      // 6719
    
    print("Hex: 0xFF = ");
    print(a);
    print("Hex: 0x10 = ");
    print(b);
    print("Hex: 0x1A3F = ");
    print(d);
    
    return a;
}

fn test_binary_literals(): i32 {
    let a: i32 = 0b1111;      // 15
    let b: i32 = 0b1010;      // 10
    let c: i32 = 0b11111111;  // 255
    let d: i32 = 0b10000000;  // 128
    
    print("Binary: 0b1111 = ");
    print(a);
    print("Binary: 0b1010 = ");
    print(b);
    print("Binary: 0b11111111 = ");
    print(c);
    print("Binary: 0b10000000 = ");
    print(d);
    
    return a;
}

fn test_octal_literals(): i32 {
    let a: i32 = 0o777;       // 511
    let b: i32 = 0o10;        // 8
    let c: i32 = 0o100;       // 64
    let d: i32 = 0o377;       // 255
    
    print("Octal: 0o777 = ");
    print(a);
    print("Octal: 0o10 = ");
    print(b);
    print("Octal: 0o100 = ");
    print(c);
    print("Octal: 0o377 = ");
    print(d);
    
    return a;
}

fn test_mixed_literals(): i32 {
    // Test that all literal types work together
    let hex: i32 = 0xFF;      // 255
    let bin: i32 = 0b11111111;  // 255
    let oct: i32 = 0o377;     // 255
    let dec: i32 = 255;       // 255
    
    print("All should be 255:");
    print("Hex: ");
    print(hex);
    print("Binary: ");
    print(bin);
    print("Octal: ");
    print(oct);
    print("Decimal: ");
    print(dec);
    
    // All should be equal
    if hex == bin {
        if bin == oct {
            if oct == dec {
                print("✅ All literals equal!");
                return 0;
            }
        }
    }
    
    print("❌ Literals not equal");
    return 1;
}

fn main(): i32 {
    print("=== Test Hexadecimal Literals ===");
    test_hex_literals();
    
    print("\n=== Test Binary Literals ===");
    test_binary_literals();
    
    print("\n=== Test Octal Literals ===");
    test_octal_literals();
    
    print("\n=== Test Mixed Literals ===");
    let result = test_mixed_literals();
    
    return result;
}
