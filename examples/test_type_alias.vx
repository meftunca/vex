// Test type alias functionality

// Basic type alias
type MyInt = i32;
type MyFloat = f64;
type MyString = string;

// Tuple type alias
type Point2D = (f64, f64);
type Point3D = (f64, f64, f64);

// Function type alias
type BinaryOp = fn(i32, i32): i32;
type Predicate = fn(i32): bool;

fn main() {
    // Test basic type aliases
    let! x: MyInt = 42;
    let! y: MyFloat = 3.14;
    let! name: MyString = "Vex";
    
    print("Testing type aliases:");
    print("x (MyInt) = 42");
    print("y (MyFloat) = 3.14");
    print("name (MyString) = Vex");
    
    // Test tuple type alias
    let! p1: Point2D = (1.0, 2.0);
    let! p2: Point3D = (1.0, 2.0, 3.0);
    
    print("\nTuple type aliases:");
    print("Point2D = (1.0, 2.0)");
    print("Point3D = (1.0, 2.0, 3.0)");
    
    print("\nâœ… Type alias test passed!");
}
