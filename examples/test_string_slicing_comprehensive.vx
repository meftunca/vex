// Test: Comprehensive String Slicing
// Tests indexing and slicing operations

fn main(): i32 {
    let text: string = "Hello, World!";
    
    // Test 1: Basic indexing
    let first_char = text[0];
    println("First byte (H): ");
    
    // Test 2: String slicing
    let hello = text[0..5];
    println("Slice [0..5] (Hello): ");
    println(hello);
    
    // Test 3: Slice from start
    let start_slice = text[..7];
    println("Slice [..7] (Hello, ): ");
    println(start_slice);
    
    // Test 4: Slice to end
    let end_slice = text[7..];
    println("Slice [7..] (World!): ");
    println(end_slice);
    
    // Test 5: Full slice
    let full = text[..];
    println("Full slice [..]: ");
    println(full);
    
    return 0;
}
