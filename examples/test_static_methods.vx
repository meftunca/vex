// Test static method syntax: fn Type.method()
// This tests the new static method definition and call syntax

// ✅ NEW SYNTAX: Static method definition with dot notation
fn Point.new(x: i32, y: i32): Point {
    return Point { x: x, y: y };
}

fn Point.zero(): Point {
    return Point { x: 0, y: 0 };
}

fn Point.from_coords(x: i32, y: i32): Point {
    return Point { x: x, y: y };
}

// ✅ Struct definition
struct Point {
    x: i32,
    y: i32,
}

// ✅ Instance method (for comparison)
fn (p: &Point) distance_squared(): i32 {
    return p.x * p.x + p.y * p.y;
}

fn main() {
    // ✅ Test static method calls with new syntax
    let p1 = Point.new(10, 20);
    let p2 = Point.zero();
    let p3 = Point.from_coords(5, 15);
    
    // ✅ Test instance method (should work as before)
    let dist = p1.distance_squared();
    
    print("Static method test passed!\n");
    print("p1.x = ");
    print(p1.x);
    print("\n");
    print("p2.x = ");
    print(p2.x);
    print("\n");
    print("p3.y = ");
    print(p3.y);
    print("\n");
    print("distance = ");
    print(dist);
    print("\n");
}
