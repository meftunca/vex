// Test Display contract with primitive types
// Testing built-in Display implementations

import { Display } from "fmt";

// External C functions for type conversion
extern "C" {
    fn vex_i32_to_string(value: i32): str;
    fn vex_f64_to_string(value: f64): str;
    fn vex_bool_to_string(value: bool): str;
}

// Test with primitive type conversion functions
fn test_i32_display() {
    let s = vex_i32_to_string(42);
    print(s);
    println("");
}

fn test_f64_display() {
    let s = vex_f64_to_string(3.14);
    print(s);
    println("");
}

fn test_bool_display() {
    let s = vex_bool_to_string(true);
    print(s);
    println("");
}

fn main(): i32 {
    test_i32_display();   // Should print: 42
    test_f64_display();   // Should print: 3.14
    test_bool_display();  // Should print: true
    return 0;
}
