// Test async functions with multiple tasks
async fn compute() : i32 {
    return 42;
}

async fn double(x: i32) : i32 {
    return x * 2;
}

async fn add(a: i32, b: i32) : i32 {
    return a + b;
}

fn main() {
    // Test 1: Simple await
    x := await compute();
    print(x);  // Should print 42
    
    // Test 2: Chained async calls
    y := await double(x);
    print(y);  // Should print 84
    
    // Test 3: Multiple awaits
    a := await compute();
    b := await double(10);
    result := await add(a, b);
    print(result);  // Should print 62 (42 + 20)
}
