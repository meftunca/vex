fn main() {
    // Test 1: Implicit upcast - i8 : i32
    let a: i8 = 10;
    let b: i32 = a;  // Implicit upcast?
    print("Test 1: i8 : i32\n");
    
    // Test 2: Implicit upcast - i32 : i64
    let c: i32 = 100;
    let d: i64 = c;  // Implicit upcast?
    print("Test 2: i32 : i64\n");
    
    // Test 3: Implicit upcast - f32 : f64
    let e: f32 = 3.14;
    let f: f64 = e;  // Implicit upcast?
    print("Test 3: f32 : f64\n");
    
    // Test 4: Function parameter upcast
    test_func_param();
    
    print("All tests completed\n");
}

fn takes_i64(x: i64) {
    print("Received i64\n");
}

fn test_func_param() {
    let small: i32 = 42;
    takes_i64(small);  // Implicit upcast in function call?
}
