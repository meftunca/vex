// Field init shorthand test - Vex v0.9.2
// Syntax: Point { x, y } instead of Point { x: x, y: y }

struct Point {
    x: i32,
    y: i32,
}

struct Person {
    name: String,
    age: i32,
    active: bool,
}

fn main() {
    let x = 100;
    let y = 200;
    
    // Full syntax
    let p1 = Point { x: x, y: y };
    println("Full syntax: p1.x = {}, p1.y = {}", p1.x, p1.y);
    
    // Shorthand syntax
    let p2 = Point { x, y };
    println("Shorthand: p2.x = {}, p2.y = {}", p2.x, p2.y);
    
    // Mixed syntax
    let p3 = Point { x, y: 999 };
    println("Mixed: p3.x = {}, p3.y = {}", p3.x, p3.y);
    
    // Multiple fields
    let name = "Alice";
    let age = 30;
    let active = true;
    
    let person = Person { name, age, active };
    println("Person: name={}, age={}, active={}", person.name, person.age, person.active);
}
