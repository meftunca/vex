// Test Bitwise Operator Overloading (Phase 1.5)
// Tests: &, |, ^, ~, <<, >>

fn main(): i32 {
    // Test builtin i32 bitwise operators
    let a = 0b1100;  // 12
    let b = 0b1010;  // 10
    
    let and_result = a & b;      // 0b1000 = 8
    let or_result = a | b;       // 0b1110 = 14
    let xor_result = a ^ b;      // 0b0110 = 6
    let not_result = ~a;         // bitwise NOT
    let shl_result = a << 2;     // 0b110000 = 48
    let shr_result = a >> 2;     // 0b0011 = 3
    
    println("Bitwise Operations:");
    println("a = {}, b = {}", a, b);
    println("a & b = {}", and_result);
    println("a | b = {}", or_result);
    println("a ^ b = {}", xor_result);
    println("~a = {}", not_result);
    println("a << 2 = {}", shl_result);
    println("a >> 2 = {}", shr_result);
    
    // Verify expected results
    if and_result == 8 {
        println("✅ BitAnd works!");
    }
    if or_result == 14 {
        println("✅ BitOr works!");
    }
    if xor_result == 6 {
        println("✅ BitXor works!");
    }
    if shl_result == 48 {
        println("✅ Shl works!");
    }
    if shr_result == 3 {
        println("✅ Shr works!");
    }
    
    return 0;
}
