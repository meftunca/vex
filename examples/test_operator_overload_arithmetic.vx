// Test: Arithmetic Operator Overloading (Phase 1)
// Tests: op+, op-, op*, op/, op%

// Define contracts first
contract Add {
    op+(rhs: Self): Self;
}

contract Sub {
    op-(rhs: Self): Self;
}

contract Mul {
    op*(rhs: Self): Self;
}

contract Div {
    op/(rhs: Self): Self;
}

// 2D Vector with full arithmetic support
struct Vec2 impl Add, Sub, Mul, Div {
    x: f32,
    y: f32,
    
    op+(other: Vec2): Vec2 {
        return Vec2 { x: self.x + other.x, y: self.y + other.y };
    }
    
    op-(other: Vec2): Vec2 {
        return Vec2 { x: self.x - other.x, y: self.y - other.y };
    }
    
    op*(scalar: f32): Vec2 {
        return Vec2 { x: self.x * scalar, y: self.y * scalar };
    }
    
    op/(scalar: f32): Vec2 {
        return Vec2 { x: self.x / scalar, y: self.y / scalar };
    }
    
    magnitude(): f32 {
        return (self.x * self.x + self.y * self.y);  // Simplified for testing
    }
}

