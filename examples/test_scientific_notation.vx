// Test scientific notation support

fn test_basic_scientific() {
    let a = 1.5e10;
    let b = 2.0E-5;
    let c = 3.14159e0;
    
    println("Basic scientific: a={}, b={}, c={}", a, b, c);
}

fn test_arithmetic_scientific() {
    let large = 1.0e6;  // 1 million
    let small = 1.0e-6; // 1 millionth
    let product = large * small;
    
    println("1e6 * 1e-6 = {}", product);
    println("Expected: 1.0");
}

fn test_positive_exponent() {
    let a = 1.23e2;   // 123.0
    let b = 4.56e3;   // 4560.0
    let c = 7.89e10;  // 78900000000.0
    
    println("Positive exponents: {}, {}, {}", a, b, c);
}

fn test_negative_exponent() {
    let a = 1.23e-2;  // 0.0123
    let b = 4.56e-3;  // 0.00456
    let c = 7.89e-10; // 0.000000000789
    
    println("Negative exponents: {}, {}, {}", a, b, c);
}

fn test_uppercase_e() {
    let a = 1.0E10;
    let b = 2.5E-5;
    let c = 3.14E0;
    
    println("Uppercase E: {}, {}, {}", a, b, c);
}

fn test_explicit_plus() {
    let a = 1.0e+10;  // Explicit positive exponent
    let b = 2.0E+5;
    
    println("Explicit +: {}, {}", a, b);
}

fn main() {
    println("=== Scientific Notation Tests ===");
    test_basic_scientific();
    test_arithmetic_scientific();
    test_positive_exponent();
    test_negative_exponent();
    test_uppercase_e();
    test_explicit_plus();
    println("All tests completed!");
}
