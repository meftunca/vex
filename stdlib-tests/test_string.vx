// String Module Test
// Tests string operations (Go-like API)

import { println } from "io";
import { 
    len, 
    compare, 
    contains, 
    has_prefix, 
    has_suffix,
    to_upper,
    to_lower,
    trim,
    replace
} from "string";

fn main(): i32 {
    println("=== String Module Test ===");
    
    // Test contains
    let s1: String = "Hello World";
    let hello: String = "Hello";
    
    if contains(s1, hello) {
        println("✓ contains() working (found 'Hello')");
    }
    
    let s2: String = "Hello World";
    let xyz: String = "XYZ";
    
    if !contains(s2, xyz) {
        println("✓ contains() working (not found 'XYZ')");
    }
    
    // Test has_prefix
    let s3: String = "Hello World";
    let prefix: String = "Hello";
    if has_prefix(s3, prefix) {
        println("✓ has_prefix() working");
    }
    
    // Test has_suffix
    let s4: String = "Hello World";
    let suffix: String = "World";
    if has_suffix(s4, suffix) {
        println("✓ has_suffix() working");
    }
    
    // Test to_upper
    let s5: String = "hello";
    let upper: String = to_upper(s5);
    println("✓ to_upper() working");
    
    // Test to_lower
    let s6: String = "WORLD";
    let lower: String = to_lower(s6);
    println("✓ to_lower() working");
    
    // Test trim
    let padded: String = "  trimmed  ";
    let trimmed: String = trim(padded);
    println("✓ trim() working");
    
    // Test replace
    let original: String = "foo bar foo";
    let foo_str: String = "foo";
    let baz_str: String = "baz";
    let replaced: String = replace(original, foo_str, baz_str);
    println("✓ replace() working");
    
    println("✓ String module fully functional");
    
    return 0;
}
