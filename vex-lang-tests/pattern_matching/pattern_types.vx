// Test file for Vex pattern matching: Pattern Types
// This file tests various pattern types in match expressions

enum Option<T> {
    Some(T),
    None,
}

enum Result<T, E> {
    Ok(T),
    Err(E),
}

fn main(): i32 {
    // Literals
    let x = 42;
    let literal_match = match x {
        0 => { "zero" }
        1 => { "one" }
        42 => { "the answer" }
        _ => { "other" }
    };

    // Enums with data
    let opt = Option.Some(42);
    let option_value = match opt {
        Option.Some(value) => { value }
        Option.None => { 0 }
    };

    let result = Result.Ok("success");
    let result_value = match result {
        Result.Ok(data) => { 1 }
        Result.Err(error) => { 0 }
    };

    // Or patterns
    let num = 3;
    let category = match num {
        1 | 3 | 5 | 7 | 9 => { "odd" }
        2 | 4 | 6 | 8 | 10 => { "even" }
        _ => { "other" }
    };

    // Wildcard
    let anything = "test";
    let wildcard_result = match anything {
        "special" => { 1 }
        _ => { 0 }
    };

    return option_value + result_value;
}