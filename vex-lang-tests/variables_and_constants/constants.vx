// Test file for Vex variables and constants: Constants
// This file tests compile-time constants
// NOTE: Constants can only be declared at global/module scope (headless)

// Global constants - compile-time evaluated with explicit types
const MAX_SIZE: i32 = 1024;
const PI: f64 = 3.141592653589793;
const APP_NAME: string = "VexApp";
const DEBUG: bool = true;
const VERSION_MAJOR: i32 = 0;
const VERSION_MINOR: i32 = 9;
const VERSION_PATCH: i32 = 2;

// Complex constant expressions
const COMPLEX_EXPR: i32 = (MAX_SIZE * 2) + (VERSION_MAJOR * 100) + VERSION_MINOR;
const MATH_CONST: f64 = PI * 2.0;
const BIT_FLAGS: i32 = 1 | 2 | 4 | 8;

// Large constants
const LARGE_U64: u64 = 18446744073709551615;
const LARGE_I64: i64 = 9223372036854775807;
const SMALL_I64: i64 = -9223372036854775808;

// String constants
const EMPTY_STR: string = "";
const SINGLE_CHAR: string = "x";
const MULTILINE_STR: string = "line1\nline2\nline3";

// Boolean constants
const ALWAYS_TRUE: bool = true && true;
const ALWAYS_FALSE: bool = false || false;

fn main(): i32 {
    // Constants are immutable (always)
    // MAX_SIZE = 2048;  // ERROR: Cannot assign to constant

    // Can be used in expressions
    let array_size = MAX_SIZE / 2;
    let circumference = 2.0 * PI * 10.0;

    // Constants can be shadowed by variables (but not recommended)
    let MAX_SIZE = 512;  // Shadows the constant
    let shadowed_result = MAX_SIZE + array_size;

    // Use global constants
    let version_code = VERSION_MAJOR * 10000 + VERSION_MINOR * 100 + VERSION_PATCH;
    let flags = BIT_FLAGS;
    let large_sum = LARGE_I64 + SMALL_I64;

    return array_size + COMPLEX_EXPR + version_code;
}