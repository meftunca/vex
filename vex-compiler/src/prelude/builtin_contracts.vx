// ============================================================================
// Non-Operator Contracts
// ============================================================================

// All primitives support Display, Clone, Debug
i8 extends Display, Clone, Debug;
i16 extends Display, Clone, Debug;
i32 extends Display, Clone, Debug;
i64 extends Display, Clone, Debug;
i128 extends Display, Clone, Debug;

u8 extends Display, Clone, Debug;
u16 extends Display, Clone, Debug;
u32 extends Display, Clone, Debug;
u64 extends Display, Clone, Debug;
u128 extends Display, Clone, Debug;

f16 extends Display, Clone, Debug;
f32 extends Display, Clone, Debug;
f64 extends Display, Clone, Debug;

bool extends Display, Clone, Debug;
string extends Display, Clone, Debug;
