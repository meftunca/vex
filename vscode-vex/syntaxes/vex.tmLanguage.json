{
  "name": "Vex",
  "scopeName": "source.vex",
  "fileTypes": ["vx"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#attributes" },
    { "include": "#macros" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vex",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vex",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vex",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vex",
              "match": "\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]+\\}|.)"
            },
            {
              "name": "meta.interpolation.vex",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        },
        {
          "name": "string.quoted.single.vex",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vex",
              "match": "\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]+\\}|.)"
            }
          ]
        }
      ]
    },
    "characters": {
      "name": "string.quoted.single.vex",
      "match": "'([^'\\\\]|\\\\.)'",
      "captures": {
        "0": { "name": "string.quoted.single.vex" }
      }
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.vex",
          "match": "\\b0x[0-9A-Fa-f_]+\\b"
        },
        {
          "name": "constant.numeric.binary.vex",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.vex",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.vex",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?(f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.vex",
          "match": "\\b[0-9][0-9_]*(i8|i16|i32|i64|u8|u16|u32|u64)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vex",
          "match": "\\b(if|else|match|case|switch|for|while|loop|break|continue|return|defer|yield|await|async)\\b"
        },
        {
          "name": "keyword.declaration.vex",
          "match": "\\b(fn|struct|enum|trait|impl|type|const|let)\\b"
        },
        {
          "name": "storage.modifier.vex",
          "match": "\\b(export|unsafe|extern)\\b"
        },
        {
          "name": "keyword.other.vex",
          "match": "\\b(as|in|where|Self|self|super|import|from)\\b"
        },
        {
          "name": "constant.language.vex",
          "match": "\\b(true|false|null|none|some)\\b"
        },
        {
          "name": "keyword.operator.mutable.vex",
          "match": "!"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.vex",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|string|char|void|never)\\b"
        },
        {
          "name": "entity.name.type.vex",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        },
        {
          "name": "storage.type.vex",
          "match": "\\b(dyn|Box|Rc|Arc|Vec|Option|Result)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vex",
          "match": "\\b([a-z_][a-z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.vex",
          "match": "\\b(println|print|panic|assert|unreachable|sizeof|alignof|typeof|type_id)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.vex",
          "match": "(\\+|\\-|\\*|\\/|%|\\^|&|\\||!|~|<<|>>|==|!=|<|>|<=|>=|&&|\\|\\||=|\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.arrow.vex",
          "match": "(->|=>|::)"
        },
        {
          "name": "keyword.operator.reference.vex",
          "match": "(&)([A-Za-z_][A-Za-z0-9_]*)(!)?",
          "captures": {
            "1": { "name": "keyword.operator.reference.vex" },
            "3": { "name": "keyword.operator.mutable.vex" }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.vex",
          "begin": "@",
          "end": "(?=\\s|\\(|\\[|\\{|;|,)",
          "patterns": [
            {
              "name": "entity.name.function.attribute.vex",
              "match": "[a-z_][a-z0-9_]*"
            }
          ]
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "entity.name.function.macro.vex",
          "match": "\\b([a-z_][a-z0-9_]*)!(?=\\()"
        }
      ]
    }
  }
}
