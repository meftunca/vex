{
  "name": "vex-language",
  "displayName": "Vex Language Support",
  "description": "Syntax highlighting and language support for Vex programming language",
  "version": "0.2.0",
  "publisher": "meftunca",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "vex",
    "systems programming",
    "rust",
    "go"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meftunca/vex"
  },
  "activationEvents": [
    "onLanguage:vex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vex",
        "aliases": [
          "Vex",
          "vex"
        ],
        "extensions": [
          ".vx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vex",
        "scopeName": "source.vex",
        "path": "./syntaxes/vex.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "vex",
        "path": "./snippets/vex.json"
      }
    ],
    "themes": [
      {
        "label": "Vex Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/vex-dark.json"
      }
    ],
    "commands": [
      {
        "command": "vex.restartServer",
        "title": "Vex: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run compile",
    "compile": "cd client && npm run compile",
    "watch": "cd client && npm run watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0"
  }
}
