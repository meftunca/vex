// stdlib/core/src/native.vxc
// Core native C bindings for memory management
// ⚠️ Only .vxc files are allowed to contain extern "C" blocks

extern "C" {
    // Memory allocation
    fn malloc(size: i64): ptr;
    fn free(ptr: ptr);
    fn realloc(ptr: ptr, new_size: i64): ptr;
    
    // Box operations
    fn vex_box_new(elem_size: i64): ptr;
    fn vex_box_get(box: ptr): ptr;
    fn vex_box_free(box: ptr);
    fn vex_memcpy(dest: ptr, src: ptr, size: i64): ptr;
}
