// Layer 1: Array Literals and Indexing
// Tests array creation and element access

fn main(): i32 {
    // Test 1: Array literal
    let arr1 = [10, 20, 30, 40, 50];
    let first = arr1[0];   // 10
    let third = arr1[2];   // 30
    
    // Test 2: Array repeat syntax
    let arr2 = [7; 5];     // [7, 7, 7, 7, 7]
    let val = arr2[3];     // 7
    
    // Test 3: Mixed element access
    let arr3 = [1, 2, 3];
    let sum = arr3[0] + arr3[1] + arr3[2];  // 6
    
    return first + third + val + sum;  // 10 + 30 + 7 + 6 = 53
}
