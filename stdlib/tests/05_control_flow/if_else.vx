// Layer 1: If/Else Expressions
// Tests conditional branching with if/else

fn main(): i32 {
    // Test 1: Simple if/else
    let x = 10;
    let result1: i32 = 0;
    if x > 5 {
        result1 = 100;
    } else {
        result1 = 200;
    }
    
    // Test 2: Nested if/else
    let y = 20;
    let result2: i32 = 0;
    if y > 30 {
        result2 = 1;
    } else if y > 15 {
        result2 = 2;
    } else {
        result2 = 3;
    }
    
    // Test 3: If without else (statement form)
    let! z = 0;
    if x > 0 {
        z = 42;
    }
    
    // Test 4: Complex conditions
    let a = 5;
    let b = 10;
    let result3: i32 = 0;
    if a < b && b < 20 {
        result3 = a + b;
    } else {
        result3 = 0;
    }
    
    return result1 + result2 + z + result3;  // 100 + 2 + 42 + 15 = 159
}
