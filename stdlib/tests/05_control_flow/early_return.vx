// Layer 1: Early Returns
// Tests return statements in different contexts

fn check_positive(x: i32): i32 {
    if x < 0 {
        return 0;  // Early return
    }
    return x;
}

fn find_first_positive(a: i32, b: i32, c: i32): i32 {
    if a > 0 {
        return a;  // Early return
    }
    if b > 0 {
        return b;  // Early return
    }
    if c > 0 {
        return c;  // Early return
    }
    return -1;  // Default
}

fn main(): i32 {
    // Test 1: Early return in helper function
    let result1 = check_positive(-5);  // 0
    let result2 = check_positive(10);  // 10
    
    // Test 2: Multiple early returns
    let result3 = find_first_positive(-1, 20, 30);  // 20
    let result4 = find_first_positive(-1, -2, 15);  // 15
    
    return result1 + result2 + result3 + result4;  // 0 + 10 + 20 + 15 = 45
}
